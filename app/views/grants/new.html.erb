<h3>Get new grant</h3>

<%= form_with url: grants_path, method: 'post' do |form| %>
  <div class="form-group">
    <label for="category_title">Enter Code</label>
    <input class="form-control" type="text" name="code" id="category_title">
  </div>

  <div class="form-group">

    <input type="submit" name="commit" value="GET ACCESS" class="btn btn-primary">

  </div>
<% end %>
