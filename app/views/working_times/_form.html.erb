<%= form_with(model: working_time, local: true) do |form| %>
  <% if working_time.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(working_time.errors.count, "error") %> prohibited this working_time from being saved:</h2>

      <ul>
      <% working_time.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :started_at %>
    <%= select_datetime Date.today, :prefix => :started_at, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= form.label :ended_at %>
    <%= select_datetime Date.today, :prefix => :ended_at, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= form.label :bio %>
    <%= form.text_field :bio, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <% if working_time.persisted? %>
      <div class="float-right">
        <%= link_to 'Destroy', working_time, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

    <% if working_time.persisted? %>
      <%= link_to "Cancel", working_time, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", working_times_path, class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>
